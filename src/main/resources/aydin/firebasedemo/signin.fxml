<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aydin.firebasedemo.SignInController" alignment="CENTER" spacing="10.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <TextField fx:id="nameTextField" promptText="Name" prefWidth="200"/>
        <PasswordField fx:id="passwordTextField" promptText="Password" prefWidth="200"/>
        <Button text="Sign In" onAction="#signInButtonClicked" prefWidth="200"/>
    </children>
</VBox>
